<% include ../partials/header %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
                <h2 class="text-center">
                        Edit Comment for <%= campground.name%>
                </h2>
                <form action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>/edit" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %>">Back</a>
                
            </div>
        </div>
    <% include ../partials/footer %>