<% include ./partials/header %>
    <div class="container">
        <div class="col-md-7 col-lg-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title display-3 text-center">login</h2>

                    <form action="/login" method="post" class="justify-content-center">
                        <div class="form-group">
                            <input class="form-control" type="text" name="username" placeholder="username">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="password" placeholder="password">
                        </div>
                        <div class="form-group">
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="login">
                        </div>
                    </form>
                    <div class="card-text text-right font-weight-light">
                        <a href="#" >forgot password</a><br>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center">
                    <span class="font-weight-light"> new user? <a href="/register" class="font-weight-light">register</a></span>
            </div>
            
        </div>
    </div>
    <% include ./partials/footer %>