<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Item1</li>
                    <li class="list-group-item">Item2</li>
                    <li class="list-group-item">Item3</li>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <img src="<%= campground.image %>" alt="" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= campground.name %>
                        </h4>
                        <h6 class="card-subtitle mb-2 text-muted">â‚¬6.00/Nacht</h6>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-success mb-2" href="/campgrounds/<%= campground._id %>/comments/new"> Add new Comment</a>
                        <% campground.comments.forEach(comment => { %>
                            <div class="list-group-item row">
                                <div class="col">
                                    <strong><%= comment.author.username %></strong>
                                        <span class="float-right">10 days ago</span>
                                        <p>
                                            <%= comment.text%>
                                        </p>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>