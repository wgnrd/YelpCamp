<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align:center;">Edit Campground <%= campground.name %></h1>

        <div class="row">
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="img url" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="desc." value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </form>
        <a href="/campgrounds">Back</a>
                
            </div>
        </div>
    </div>
    <% include ../partials/footer %>