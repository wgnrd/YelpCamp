<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1 class="display-4">Welcome to YelpCamp!</h1>
                <p class="lead">View campgrounds from all over the world</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campgrounds</a>
                </p>
            </div>
        </header>

        <div class="card-columns" style="display:flex; flex-wrap:wrap">
            <% campgrounds.forEach(function (campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= campground.name %>
                            </h4>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <% include ../partials/footer %>